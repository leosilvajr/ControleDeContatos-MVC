@model ContatoModel

@{
    ViewData["Title"] = "Confirmação apagar contato.";
}


<div class="text-center">
    <h3>Deseja realmente apagar o contato @Model.Nome ?</h3>
</div>


<a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Contato" role="button">Cancelar Exclusão</a>
<a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id" role="button">Confirmar Exclusão</a>